<%= titre_page "Medicament" %>


<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <!--<div class="ibox-title">-->
        <!--<h5>All form elements <small>With custom checbox and radion elements.</small></h5>-->
        <!--</div>-->
        <div class="ibox-content">
          <div class="row">
              <strong>Nom: </strong><%= @medicament.nom %> <br/>
              <strong>Reference: </strong><%= @medicament.reference %> <br/>
              <strong>Actif?: </strong><%= afficher_etat @medicament.actif %> <br/>
              <strong>Créé le : </strong><%=l @medicament.created_at %> <br/>
          </div>
          <div class="user-button">
            <div class="row">
              <% if @medicament.actif? %>
                  <div class="col-md-2">
                    <%= link_to '<i class="fa fa-edit"></i> Desactiver'.html_safe, medicament_desactiver_path(@medicament), class: 'btn btn-danger btn-sm btn-block' %>
                  </div>
              <% else %>
                  <div class="col-md-2">
                    <%= link_to '<i class="fa fa-edit"></i> Activer'.html_safe, medicament_activer_path(@medicament), class: 'btn btn-primary btn-sm btn-block' %>
                  </div>
              <% end %>

              <div class="col-md-2">
                <%= link_to '<i class="fa fa-edit"></i> Modifier'.html_safe, edit_medicament_path(@medicament), class: 'btn btn-default btn-sm btn-block' %>
              </div>
              <div class="col-md-2">
                <%= link_to 'Retour', medicaments_path, class: 'btn btn-default btn-sm btn-block'  %>
              </div>
            </div>
          </div>
      </div>
    </div>
    </div>
  </div>
</div>
