<%= titre_page 'Liste des Medicaments' %>

<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <div class="row">
            <div class="col-sm-12">
              <div class="actions_bouton">
                <%= link_to '<i class="fa fa-plus"></i> Ajouter'.html_safe, new_medicament_path, class: 'btn btn-primary' %>
              </div>
            </div>
          </div>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Nom</th>
                  <th>Reference</th>
                  <th>Actif?</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @medicaments.each do |medicament| %>
                  <tr>
                    <td><%= medicament.nom %></td>
                    <td><%= medicament.reference %></td>
                    <td><%= afficher_etat(medicament.actif) %></td>
                    <td><%= link_to 'Show', medicament %></td>
                    <td><%= link_to 'Edit', edit_medicament_path(medicament) %></td>
                    <td><%= link_to 'Destroy', medicament, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

        </div>
      </div>
    </div>

  </div>
</div>