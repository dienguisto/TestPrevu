<%= titre_page 'Liste des adherents' %>

<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <div class="row">
            <div class="col-sm-12">
              <div class="actions_bouton">
                <%= link_to '<i class="fa fa-plus"></i> Parrain'.html_safe, adherent_new_parrainage_path(current_adherent.id, url_back: adherent_path(current_adherent)), class: 'btn btn-primary' %>
              </div>
            </div>
          </div>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Matricule</th>
                  <th>Nom</th>
                  <th>Date de naissance</th>
                  <th>Affiliation</th>
                  <th>Status</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @adherents.each do |adherent| %>
                  <tr>
                    <td><%= adherent.matricule %></td>
                    <td><%= adherent.full_name %></td>
                    <td><%= adherent.date_de_naissance %></td>
                    <td><%= Adherent::AFFILIATION.index(adherent.affiliation) %></td>
                    <td><%= afficher_status(adherent.status) %></td>
                    <td><%= link_to 'Show', adherent %></td>
                    <td><%= link_to 'Edit', adherent_edit_parrainage_path(adherent) %></td>
                    <td><%= link_to 'Destroy', adherent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <%= paginate @adherents %>
        </div>

      </div>
    </div>
  </div>

</div>
</div>
