<% if current_user.user_structure_assurance? %>
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>Filleuls</h5>
      </div>

      <div class="ibox-content">
        <div class="row">
          <% for filleul in @adherent.filleuls %>
              <div class="col-lg-6">
                <div class="contact-box">
                  <div class="col-sm-12">
                    <h3><strong><%= filleul.full_name %></strong></h3>
                    <p>
                      <strong><%= Adherent::AFFILIATION.index(filleul.affiliation) %></strong>
                    </p>
                    <p>
                      <i class="fa fa-envelope"></i> <%= filleul.email %>
                    </p>
                    <address>
                      <%= filleul.default_contact.adresse %> <br/>
                      <abbr title="Phone">P:</abbr> <%= filleul.default_contact.telephone %>
                    </address>
                  </div>
                  <div class="clearfix"></div>
                </div>
              </div>
          <% end %>
        </div>
        <div class="text-right">
          <%= link_to '<strong>Parrainer</strong>'.html_safe, adherent_new_parrainage_path(@adherent.id, url_back: adherent_path(@adherent)), class: 'btn btn-sm btn-primary m-t-n-xs' %>
        </div>
      </div>
    </div>
<% end %>