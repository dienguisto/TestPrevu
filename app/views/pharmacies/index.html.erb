<%= titre_page 'Liste des Pharmacies' %>

<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
					<div class="row">
						<div class="col-sm-12">
							<%= search_form_for @search, {:class => 'inline-form'} do |f| %>
								<div class="form-group" >
									<%= f.search_field :structure_sanitaire_nom_start,
																		 {:class => 'form-control', :placeholder => 'Nom...'} %>
									<%= f.search_field :structure_sanitaire_adresse_start,
																		 {:class => 'form-control', :placeholder => 'Adresse...'} %>
								</div>
								<%= f.submit 'Rechercher', class: 'btn btn-primary' %>
							<% end %>
						</div>
					</div>
          <div class="row">
            <div class="col-sm-12">
              <div class="actions_bouton">
                <%= link_to '<i class="fa fa-plus"></i> Ajouter'.html_safe, new_pharmacy_path, class: 'btn btn-primary' %>
              </div>
            </div>
          </div>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Nom</th>
                  <th>Actif ?</th>
                  <th>Date d'adh√©sion</th>
                </tr>
              </thead>

              <tbody>
                <% @pharmacies.each do |pharmacy| %>
                  <% pharma = pharmacy.structure_sanitaire %>
                  <tr>
                    <td><%= link_to pharma.nom, pharmacy %></td>
                    <td><%= afficher_etat pharma.actif? %></td>
                    <td><%= pharma.date_adhesion %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <%= paginate @pharmacies %>
          </div>

        </div>
      </div>
    </div>

  </div>
</div>
