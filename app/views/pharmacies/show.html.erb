<%= titre_page "Pharmacies : #{@pharmacy.structure_sanitaire.nom}" %>
<% structure_sanitaire = @pharmacy.structure_sanitaire %>


<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-md-4">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Détails</h5>
        </div>
        <div>
          <div class="ibox-content no-padding border-left-right">
            <img alt="image" class="img-responsive" src="<%= image_path(structure_sanitaire.logo.url) %>">
          </div>
          <div class="ibox-content profile-content">
            <h4><strong><%= structure_sanitaire.nom %></strong></h4>
            <p><i class="fa fa-map-marker"></i> <%= structure_sanitaire.adresse %></p>
            <h5>
              A propos
            </h5>
            <p>
              <strong>date d'adhésion : </strong><%= structure_sanitaire.date_adhesion %> <br/>
              <strong>date de création : </strong><%= structure_sanitaire.created_at %> <br/>
            </p>
            <div class="user-button">
              <div class="row">
                <div class="col-md-6">
                  <% if structure_sanitaire.actif? %>
                      <%= link_to 'désactiver', desactiver_structure_sanitaire_path(structure_sanitaire), class: 'btn btn-danger btn-sm btn-block' %>
                  <% else %>
                      <%= link_to 'activer', activer_structure_sanitaire_path(structure_sanitaire), class: 'btn btn-primary btn-sm btn-block' %>
                  <% end %>
                </div>
                <div class="col-md-6">
                  <%= link_to '<i class="fa fa-edit"></i> modifier'.html_safe, edit_pharmacy_path(@pharmacy), class: 'btn btn-default btn-sm btn-block' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-8">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Contacts</h5>
        </div>
        <div class="ibox-content">
          <div class="row">
            <% for contact in structure_sanitaire.contacts %>
                <%= render 'contacts/show_bloc', contact: contact %>
            <% end %>
          </div>
          <div class="text-right">
            <%= link_to '<strong>Ajouter un contact</strong>'.html_safe, new_contact_path(structure_sanitaire.class, structure_sanitaire.id, url_back: pharmacy_path(@pharmacy)), class: 'btn btn-sm btn-primary m-t-n-xs' %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
