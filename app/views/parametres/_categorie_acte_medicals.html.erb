<div class="ibox float-e-margins">
  <div class="ibox-title">
    <h5>Categorie acte medical</h5>
    <div class="ibox-tools">
      <a class="collapse-link">
        <i class="fa fa-chevron-up"></i>
      </a>
      <a class="close-link">
        <i class="fa fa-times"></i>
      </a>
    </div>
  </div>
  <div class="ibox-content">

    <div class="table-responsive">
      <table class="table table-striped  myTable">
        <thead>
        <tr>
          <th>#</th>
          <th>Nom</th>
          <th colspan="2"></th>
        </tr>
        </thead>

        <tbody class="categ_acte_table">
        <% @categories.each do |categ| %>
            <tr>
              <td><%= link_to "##{categ.id}", '#', class: 'consultLink' %></td>
              <td><%= categ.nom %></td>
              <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, '#'+categ.id.to_s, { :class => 'editCateg'} %></td>
              <td><%= link_to '<i class="fa fa-remove"></i>'.html_safe, '#'+categ.id.to_s, { class: 'delCateg' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <div class="actions_bouton">
        <%= link_to '<i class="fa fa-plus"></i> Ajouter'.html_safe, '#', class: 'btn btn-primary addCateg' %>
      </div>
    </div>

  </div>
</div>