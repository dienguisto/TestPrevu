<%= bootstrap_form_for(@consultation, :url => confirm_adherent_consultations_path(@adherent), layout: :horizontal) do |f| %>

    <div class="form-inputs">
      <%= f.grouped_collection_select :type_acte_medical_id, CategorieActeMedical.all, :type_acte_medicals, :nom, :id, :nom %>
      <%= f.number_field :montant_total %>
      <%= f.text_area :description %>
      <%= f.select :origine_id, FormationSanitaire.all.map{ |a| [a.nom, a.id]}, include_blank: true %>
      <%= f.date_field :date_referencement %>

    </div>

    <div class="form-group">
      <div class="col-sm-4 col-sm-offset-2">
        <%= link_to 'Annuler', @adherent, class: 'btn btn-white' %>
        <%= f.button 'Ajouter', class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>
