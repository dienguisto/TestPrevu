<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
<style>
	.invoice-total2{
		width: 65%;
		text-align: left;
		float: right;
	}
	.labelle{
		width: 70%;
	}
		.labelle_montant{
			width: 30%;
		}
</style>
<div class="row">
  <div class="col-lg-12">
    <div class="wrapper wrapper-content animated fadeInRight">
      <div class="ibox-content p-xl">
				<div class="row" style="margin-top: 5%">
					<div class="col-md-12">
						<div class="col-xs-4 col-md-2" style="float: left; text-align: center">
							<p>
							<h4><%= @consultation.formation_sanitaire.nom_struct %></h4>
							<h6><%= @consultation.formation_sanitaire.adresse_struct %></h6>
							</p>
						</div>
						<div class="col-xs-4 col-md-2">
						</div>
						<div class="col-xs-4 col-md-2" style="float: right; text-align: center">
							<p>
							<h4><%= @consultation.adherent.full_name %></h4>
							<h4><%= @consultation.adherent.matricule %></h4>
							</p>
						</div>
					</div>
				</div>
        <div class="row">
					<p style="text-align: center">
						<span style="text-align: center"><strong>Date consultation:</strong> <%=l @consultation.created_at %></span><br>
					</p>
        </div>
        <div class="responsive m-t" style="margin-top: 10%">
          <p>
            <h2 class="center-block" style="text-align: center">Description</h2>
            <p><%= @consultation.description %></p>
          </p>

        </div>

        <table class="table responsive invoice-total2"  style="margin-top: 10%">
          <tbody>
              <tr class="col-sm-12 text-left">
                <td class="labelle"><strong>Montant pay√© par l'adherent :</strong></td>
                <td class="labelle_montant"><%= @consultation.montant_paye_par_adherent %> F CFA</td>
              </tr>
              <tr class="col-sm-12 text-left">
                <td class="labelle"><strong>Montant pris en charge :</strong></td>
                <td class="labelle_montant"><%= @consultation.montant_pris_en_charge %> F CFA</td>
              </tr>
              <tr class="col-sm-12 text-left">
                <td class="labelle"><strong>Montant total :</strong></td>
                <td class="labelle_montant"><%= @consultation.montant_total %> F CFA</td>
              </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script type="application/javascript">
  window.print();
</script>