<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
<style>
	.invoice-total2{
		width: 65%;
		text-align: left;
		float: right;
	}
	.labelle{
		width: 70%;
	}
	.labelle_montant{
		width: 30%;
	}
</style>
<div class="row">
  <div class="col-lg-12">
    <div class="wrapper wrapper-content animated fadeInRight">
      <div class="ibox-content p-xl">
				<div class="row" style="margin-top: 5%">
					<div class="col-md-12">
						<div class="col-xs-4 col-md-2" style="float: left;">
							<p>
								<h4><%= @ordonnance.pharmacy.nom %></h4>
							  <h6><%= @ordonnance.pharmacy.adresse %></h6>
							</p>
						</div>
						<div class="col-xs-4 col-md-2">
						</div>
						<div class="col-xs-4 col-md-2" style="float: right;">
							<p>
								<h4><%= @ordonnance.adherent.matricule %></h4>
								<h5><%= @ordonnance.adherent.full_name %></h5>
							</p>
						</div>
					</div>
				</div>
				<div class="row">
					<p style="text-align: center">
						<span><strong>Date ordonnance:</strong> <%=l @ordonnance.created_at %></span><br>
					</p>
				</div>
				<br/>
        <div class="table-responsive m-t">
          <table class="table invoice-table">
            <thead>
            <tr>
              <th></th>
              <th>Item List</th>
              <th>Quantity</th>
              <th>Unit Price</th>
              <th>Total Price</th>
            </tr>
            </thead>
            <tbody>
            <% @ordonnance.detail_ordonnances.each do |ligne| %>
                <tr>
                  <td></td>
                  <td>
                    <div><strong><%= ligne.medicament.nom %></strong></div>
                  </td>
                  <td><%= ligne.quantite %></td>
                  <td><%= ligne.prix_unitaire %>F CFA</td>
                  <td><%= ligne.prix_unitaire*ligne.quantite %>F CFA</td>
                </tr>
            <% end %>

            </tbody>
          </table>
        </div>

        <table class="table invoice-total2" style="margin-top: 10%">
					<tbody>
					<tr class="col-sm-12 text-left">
						<td class="labelle"><strong>Montant pay√© par l'adherent :</strong></td>
						<td class="labelle_montant"><%= @ordonnance.montant_paye_par_adherent %> F CFA</td>
					</tr>
					<tr class="col-sm-12 text-left">
						<td class="labelle"><strong>Montant pris en charge :</strong></td>
						<td class="labelle_montant"><%= @ordonnance.montant_pris_en_charge %> F CFA</td>
					</tr>
					<tr class="col-sm-12 text-left">
						<td class="labelle"><strong>Montant total :</strong></td>
						<td class="labelle_montant"><strong><%= @ordonnance.montant_total %> F CFA</strong></td>
					</tr>
					</tbody>
        </table>
        <div class="text-right">
          <%#= link_to 'Retour', @ordonnance.adherent, class: 'btn btn-white' %>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="application/javascript">
    window.print();
</script>