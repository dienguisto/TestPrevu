<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
<div class="row">
  <div class="col-lg-12">
    <div class="wrapper wrapper-content animated fadeInRight">
      <div class="ibox-content p-xl">
        <div class="row">
          <div class="col-sm-6">
            <h2>Prévu</h2>
            <h4><%= @consultation.formation_sanitaire.title %></h4>
          </div>

          <div class="col-sm-6 text-right">
            <p>
              <span><strong>Date ordonnance:</strong> <%= @ordonnance.created_at.strftime("%A, %d %b %Y %l:%M %p") %></span><br>
            </p>
          </div>
        </div>
        <div class="table-responsive m-t">
          <table class="table invoice-table">
            <thead>
            <tr>
              <th></th>
              <th>Item List</th>
              <th>Quantity</th>
              <th>Unit Price</th>
              <th>Total Price</th>
            </tr>
            </thead>
            <tbody>
            <% @ordonnance.detail_ordonnances.each do |ligne| %>
                <tr>
                  <td></td>
                  <td>
                    <div><strong><%= ligne.medicament.nom %></strong></div>
                  </td>
                  <td><%= ligne.quantite %></td>
                  <td><%= ligne.prix_unitaire %>F CFA</td>
                  <td><%= ligne.prix_unitaire*ligne.quantite %>F CFA</td>
                </tr>
            <% end %>

            </tbody>
          </table>
        </div>

        <table class="table invoice-total">
          <tbody>
              <tr>
                <td><strong>Montant payé par l'adherent :</strong></td>
                <td><%= @ordonnance.montant_paye_par_adherent %>F CFA</td>
              </tr>
              <tr>
                <td><strong>Montant pris en charge :</strong></td>
                <td><%= @ordonnance.montant_pris_en_charge %>F CFA</td>
              </tr>
              <tr>
                <td><strong>Montant total :</strong></td>
                <td><%= @ordonnance.montant_total %>F CFA</td>
              </tr>
          </tbody>
        </table>
        <div class="text-right">
          <%= link_to 'Retour', @ordonnance.adherent, class: 'btn btn-white' %>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="application/javascript">
    window.print();
</script>