<%= titre_page 'Modification du profil' %>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3">
      <div class="ibox float-e-margins">
        <div class="ibox-content">

          <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= f.error_summary %>

              <%= f.email_field :email %>
              <%= f.password_field :password, label: 'Mot de passe', autocomplete: "off", help: 'ne rien mettre si vous ne voulez pas changer votre mot de passe', required: false %>
              <%= f.password_field :password_confirmation, label: 'Confirmation du mot de passe', required: false %>
              <%= f.password_field :current_password, label: 'Votre mot de passe en cours *', help: 'mettez le mot de passe en cours pour confirmer les modifications', required: true %>
              <div class="form-group">
                <div class="col-sm-4 col-sm-offset-2">
                  <%= f.button 'Modifier', class: 'btn btn-primary' %>
                </div>
              </div>
              <br/><br/>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>