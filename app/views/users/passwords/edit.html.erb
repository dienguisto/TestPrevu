<body class="gray-bg">

<div class="middle-box text-center loginscreen  animated fadeInDown">
  <div>
    <div>

      <h1 class="logo-name">PR+</h1>

    </div>
    <h3>Bienvenue dans PREVU SUITE</h3>
    <p>Modification du mot de passe?</p>
    <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field :reset_password_token, as: :hidden %>
        <%#= f.full_error :reset_password_token %>

        <div class="form-inputs">
          <div class="form-group">
            <input class="form-control" type="password" name="user[password]" id="user_password" placeholder="Mot de passe"/>
          </div>

          <div class="form-group">
            <input class="form-control" type="password" name="user[password]" id="user_password" placeholder="Confirmation du mot de passe"/>
          </div>
        </div>

        <div class="form-actions">
          <button type="submit" class="btn btn-primary block full-width m-b">Changer mon mot de passe</button>
        </div>
    <% end %>
    <%= render "users/shared/links" %>
  </div>
</div>

<!-- Mainly scripts -->
<script src="js/jquery-2.1.1.js"></script>
<script src="js/bootstrap.min.js"></script>

</body>
