<body class="gray-bg">

<div class="middle-box text-center loginscreen  animated fadeInDown">
  <div>
    <div>

      <h1 class="logo-name">PREVU</h1>

    </div>
    <h3>Bienvenue dans PREVU SUITE</h3>
    </p>
    <p>Veuillez bien vous connecter.</p>
    <%= form_tag sessions_path do %>
        <p class="form-group">
          <%= label_tag :matricule %><br />
          <%= text_field_tag :matricule, params[:matricule], :class => "form-control" %>
        </p>
        <p class="form-group">
          <%= label_tag :password %><br />
          <input type="password" name="password" class="form-control"/>
        </p>
        <div class="form-actions">
          <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit"><strong>Se connecter</strong></button>
          <label> <input type="checkbox" class="i-checks"> Se souvenir de moi </label>
        </div>
    <% end %>
  </div>
</div>

<!-- Mainly scripts -->
<script src="js/jquery-2.1.1.js"></script>
<script src="js/bootstrap.min.js"></script>

</body>
